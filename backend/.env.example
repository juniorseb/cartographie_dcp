# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/artci_dcp
SQLALCHEMY_TRACK_MODIFICATIONS=False

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Email Configuration (SendGrid, AWS SES, etc.)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@artci.ci

# OTP Configuration
OTP_EXPIRATION_MINUTES=10
OTP_LENGTH=6

# File Upload
MAX_CONTENT_LENGTH=10485760  # 10 MB
UPLOAD_FOLDER=uploads

# Security
PASSWORD_MIN_LENGTH=8
PASSWORD_EXPIRY_DAYS=180  # 6 months
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True

# Pagination
ITEMS_PER_PAGE=50

# API Rate Limiting
RATELIMIT_ENABLED=True
RATELIMIT_DEFAULT=100 per hour
